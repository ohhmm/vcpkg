diff --git a/configure b/configure
index abc123..def456 789
--- a/configure
+++ b/configure
@@ -123,6 +123,7 @@ function configure_spdk()
        --with-dpdk=*)
            DPDK_DIR="${arg#*=}"
            if [ -d "$DPDK_DIR" ]; then
+            # Normalize paths and check architecture-specific directories
+            DPDK_DIR=$(readlink -f "$DPDK_DIR")
+            if [ -d "$DPDK_DIR/lib64" ]; then
+                dpdk_libdir="$DPDK_DIR/lib64"
+            elif [ -d "$DPDK_DIR/lib/x86_64-linux-gnu" ]; then
+                dpdk_libdir="$DPDK_DIR/lib/x86_64-linux-gnu"
+            else
+                dpdk_libdir="$DPDK_DIR/lib"
+            fi
+            dpdk_incdir="$DPDK_DIR/include"
+            
+            # Clear all pkg-config environment
+            unset PKG_CONFIG_PATH
+            unset PKG_CONFIG_LIBDIR
+            unset PKG_CONFIG_SYSROOT_DIR
+            unset PKG_CONFIG_SYSTEM_LIBRARY_PATH
+            unset PKG_CONFIG_SYSTEM_INCLUDE_PATH
+            
+            # Set minimal pkg-config environment
+            export PKG_CONFIG_PATH="$dpdk_libdir/pkgconfig"
+            export PKG_CONFIG_LIBDIR="$dpdk_libdir/pkgconfig"
+            export PKG_CONFIG_ALLOW_SYSTEM_LIBS=0
+            export PKG_CONFIG_ALLOW_SYSTEM_CFLAGS=0
+            
+            # Create pkg-config directory
+            mkdir -p "$dpdk_libdir/pkgconfig"
+            
+            # Verify DPDK paths
+            if ! [ -d "$dpdk_libdir" ]; then
+                echo "ERROR: DPDK lib directory $dpdk_libdir does not exist"
+                return 1
+            fi
+            
+            if ! [ -d "$dpdk_incdir" ]; then
+                echo "ERROR: DPDK include directory $dpdk_incdir does not exist"
+                return 1
+            fi
+            
+            # Verify pkg-config isolation
+            if pkg-config --debug libdpdk 2>&1 | grep -q "/usr\|/local"; then
+                echo "ERROR: System paths detected in pkg-config search path"
+                return 1
+            fi
+            
+            # Set DPDK environment variables
+            export DPDK_LIB_DIR="$dpdk_libdir"
+            export DPDK_INC_DIR="$dpdk_incdir"
+            export DPDK_PKG_CONFIG_PATH="$dpdk_libdir/pkgconfig"
+            
+            echo "Using DPDK from $DPDK_DIR"
+            echo "DPDK lib dir: $dpdk_libdir"
+            echo "DPDK include dir: $dpdk_incdir"
+            echo "PKG_CONFIG_PATH=$PKG_CONFIG_PATH"
+            echo "PKG_CONFIG_LIBDIR=$PKG_CONFIG_LIBDIR"
           else
             echo "DPDK directory $DPDK_DIR does not exist"
             return 1
           fi
           ;;
