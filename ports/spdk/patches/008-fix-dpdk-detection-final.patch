diff --git a/configure b/configure
index abc123..def456 789
--- a/configure
+++ b/configure
@@ -123,6 +123,7 @@ function configure_spdk()
      --with-dpdk=*)
          DPDK_DIR="${arg#*=}"
          if [ -d "$DPDK_DIR" ]; then
+            # Normalize paths
+            DPDK_DIR=$(readlink -f "$DPDK_DIR")
+            dpdk_libdir="$DPDK_DIR/lib"
+            dpdk_incdir="$DPDK_DIR/include"
+            
+            # Set pkg-config environment
+            export PKG_CONFIG_PATH="$dpdk_libdir/pkgconfig"
+            export PKG_CONFIG_LIBDIR="$dpdk_libdir/pkgconfig"
+            export PKG_CONFIG_SYSROOT_DIR=""
+            export PKG_CONFIG_ALLOW_SYSTEM_LIBS=0
+            export PKG_CONFIG_ALLOW_SYSTEM_CFLAGS=0
+            
+            # Create pkg-config directory if needed
+            mkdir -p "$dpdk_libdir/pkgconfig"
+            
+            # Verify pkg-config can find DPDK
+            if ! pkg-config --exists libdpdk; then
+                echo "ERROR: pkg-config cannot find libdpdk.pc in $dpdk_libdir/pkgconfig"
+                echo "PKG_CONFIG_PATH=$PKG_CONFIG_PATH"
+                echo "PKG_CONFIG_LIBDIR=$PKG_CONFIG_LIBDIR"
+                ls -l "$dpdk_libdir/pkgconfig" || true
+                return 1
+            fi
+            
+            # Get DPDK configuration
+            DPDK_CFLAGS=$(pkg-config --cflags libdpdk)
+            DPDK_LIBS=$(pkg-config --libs libdpdk)
+            echo "DPDK CFLAGS: $DPDK_CFLAGS"
+            echo "DPDK LIBS: $DPDK_LIBS"
+            
+            # Force our DPDK paths
+            export DPDK_LIB_DIR="$dpdk_libdir"
+            export DPDK_INC_DIR="$dpdk_incdir"
+            export DPDK_PKG_CONFIG_PATH="$dpdk_libdir/pkgconfig"
+            
+            # Set up configuration
+            CONFIG[DPDK_DIR]="$DPDK_DIR"
+            CONFIG[DPDK_LIB_DIR]="$dpdk_libdir"
+            CONFIG[DPDK_INC_DIR]="$dpdk_incdir"
+            CONFIG[DPDK_PKG_CONFIG]=y
+            
             echo "Using DPDK from $DPDK_DIR"
+            echo "DPDK libraries: $dpdk_libdir"
+            echo "DPDK includes: $dpdk_incdir"
+            echo "PKG_CONFIG_LIBDIR=$PKG_CONFIG_LIBDIR"
          else
             echo "DPDK directory $DPDK_DIR does not exist"
             return 1
          fi
          ;;
